          {
            "name": "consumption",
            "type": "number",
            "title": {
              "en": "Consumption",
              "nl": "Verbruik"
            },
            "example": 200
          }
        ],
				"args": [
	        {
            "name": "device",
            "type": "device",
            "placeholder": {
              "en": "Select Inverter",
